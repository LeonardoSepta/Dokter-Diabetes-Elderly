<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tambahsarapan"
    android:background="#c70039"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:onClick="back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C70039"
            android:src="@drawable/ic_baseline_navigate_before_24">
        </ImageButton>
        <TextView
            android:onClick="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:paddingTop="20dp">
        </TextView>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/logodokterdiabetes">
        </ImageView>

        <!--<TextView
            android:onClick="savesarapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="20sp">
        </TextView>-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/backgroundmenu"
        android:layout_marginTop="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sarapan">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>