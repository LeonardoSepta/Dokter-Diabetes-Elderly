<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Glukosa.Glukosa" android:orientation="vertical"
    android:background="#C70039"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:onClick="back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/basecolor"
            android:src="@drawable/ic_baseline_navigate_before_24_white"
            tools:targetApi="lollipop">
        </ImageButton>
        <TextView
            android:onClick="back"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            >
        </TextView>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/logodokterdiabetes">
        </ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Glukosa"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/backgroundmenu"
        android:orientation="vertical">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Gula Darah (mg/dL):"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">
        </TextView>

        <EditText
            android:id="@+id/numGlukosa"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Ex: 80 mg/dL"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20sp">
        </EditText>


        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Tanggal data dimasukan:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">
        </TextView>

        <!--Membuat current date-->
        <TextView
            android:id="@+id/dateGlukosa"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:paddingBottom="10dp"
            />

       <!-- <EditText
            android:id="@+id/tanggalGlukosa"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="dd/mm/yy"
            android:inputType="date"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20sp">
        </EditText>-->

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/puasa"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="Puasa"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            >
        </androidx.appcompat.widget.SwitchCompat>

        <Button
            android:onClick="SimpanGlukosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#a9a9a9"
            android:text="Simpan"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            >
        </Button>
    </LinearLayout>
</LinearLayout>