<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="5dp">

    <RelativeLayout
        android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:backgroundTint="#f2f2f2"
        android:id="@+id/id">

        <ImageView
            android:id="@+id/imgResep"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@color/basecolor"
            />

        <TextView
            android:id="@+id/judulResep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/imgResep"
            android:text="Judul Resep"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints"/>



        <TextView
            android:id="@+id/detailResep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judulResep"
            android:text="Detail Resep"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#808080"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

</RelativeLayout>